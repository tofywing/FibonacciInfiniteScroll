<resources>

    <!-- Base application theme. -->
    <style name="FibonacciTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FibonacciTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FibonacciTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="FibonacciTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="FibonacciTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar"/>

    <style name="FibonacciTheme.ActionBar.TitleTextStyle"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FibonacciTheme.ActionBar.SubTitleTextStyle"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">serif</item>
    </style>

</resources>
